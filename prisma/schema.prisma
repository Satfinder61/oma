datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  tasks    Task[]
}

model Task {
  id          Int     @id @default(autoincrement())
  title       String
  issueNumber String  @unique
  status      String
  puan        Int     @default(0)
  userId      Int
  user        User    @relation(fields: [userId], references: [id])
}
